<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/accent"/>
            <size android:width="30dp" android:height="30dp"/>

            <stroke android:width="2dp" android:color="@color/bg1"/>
        </shape>
    </item>

    <item android:width="6dp" android:height="6dp" android:left="7.5dp" android:top="16dp">
        <rotate android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/bg1"/>
                <stroke android:width="0.6dp" android:color="@color/accent"/>
                <!--<size android:width="5dp" android:height="5dp"/>-->
            </shape>
        </rotate>
    </item>

    <item android:width="8dp" android:height="16dp" android:left="12dp" android:top="6dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/bg1"/>
                <stroke android:width="0.6dp" android:color="@color/accent"/>
                <!--<size android:width="5dp" android:height="5dp"/>-->
            </shape>
        </rotate>
    </item>

    <item android:width="2dp" android:height="15dp" android:top="14dp" android:left="13dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid
                    android:color="@color/accent" />
            </shape>
        </rotate>
    </item>
</layer-list>